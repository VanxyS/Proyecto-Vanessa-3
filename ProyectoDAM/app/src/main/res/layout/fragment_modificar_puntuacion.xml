<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ModificarPuntuacion">

    <include
        android:id="@+id/include4"
        layout="@layout/drawer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listLuchadoresPuntuacion"
        android:layout_width="415dp"
        android:layout_height="350dp"
        android:layout_marginBottom="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4"
        app:layout_constraintVertical_bias="0.0">

    </ListView>

    <RadioGroup
        android:id="@+id/radioLuchadoresPuntuacion"
        android:layout_width="223dp"
        android:layout_height="155dp"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/luchadorAniadirPuntuacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listUsuarios">

        <RadioButton
            android:id="@+id/puestoPrimero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primero" />

        <RadioButton
            android:id="@+id/puestoSegundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segundo" />

        <RadioButton
            android:id="@+id/puestoTercero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tercero" />

        <RadioButton
            android:id="@+id/puestoCuarto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuarto" />

        <RadioButton
            android:id="@+id/otrosPuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otros" />
    </RadioGroup>

    <EditText
        android:id="@+id/luchadorAniadirPuntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sumarPutuacionLuchador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/apellido1Sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:ems="10"
        android:hint="Primer Apellido"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luchadorAniadirPuntuacion" />

    <Button
        android:id="@+id/sumarPutuacionLuchador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginLeft="157dp"
        android:layout_marginEnd="157dp"
        android:layout_marginRight="157dp"
        android:layout_marginBottom="16dp"
        android:text="Sumar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>